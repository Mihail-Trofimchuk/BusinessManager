<Window x:Class="BusinessManager.Views.ModalWindows.UserMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BusinessManager.Views.ModalWindows"
        mc:Ignorable="d"
        Title="UserMessage" AllowsTransparency="True" Background="Transparent" MinHeight="216"  MaxHeight="216
        "
        MinWidth="384" MaxWidth="384" WindowStyle="None" WindowStartupLocation="CenterScreen"   >
    <Border CornerRadius="5" Background="White" Margin="0,0,0,-0.286"  >

        <Grid  VerticalAlignment="Stretch"  >
            <TextBlock Margin="28,52,23,52" TextWrapping="Wrap" FontSize="24" FontWeight="Bold"><Run Text="Пользователь существует,"/><LineBreak/><Run Language="ru-ru" Text="или неверно введены данные"/><Run Text="!"/></TextBlock>
            <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton" Margin="0,10,10,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Width="25"/>
        </Grid>
    </Border>
</Window>
